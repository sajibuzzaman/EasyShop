<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/screenbg"
    tools:context=".activity.SupplierDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_customers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_color">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Supplier Details"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/name_supplier_details_activity_TVID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplier Name"
        android:textSize="30sp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/address_supplier_details_activity_TVID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="20sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/due_supplier_details_activity_TVID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total due"
        android:textSize="20sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/paid_amount_supplier_details_activity_ETID"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:hint="Paid amount"
            android:padding="10dp"
            android:textSize="20sp"
            android:inputType="numberDecimal"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/reduce_due_supplier_details_activity_BTID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Reduce"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/new_due_supplier_details_activity_ETID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="New due amount"
            android:padding="10dp"
            android:textSize="20sp"
            android:inputType="numberDecimal"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/add_due_supplier_details_activity_BTID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Add due"/>

    </LinearLayout>

</LinearLayout>